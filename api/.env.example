# =============================================================================
# Interactive Study Mode API - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# AI Provider Configuration (choose one or both)
# -----------------------------------------------------------------------------

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Default provider: "openai" | "anthropic" | "mock"
AI_PROVIDER=mock

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------

# Requests per hour per IP address
RATE_LIMIT_REQUESTS_PER_HOUR=60

# -----------------------------------------------------------------------------
# Content Path
# -----------------------------------------------------------------------------

# Path to lesson content (relative to API root or absolute)
CONTENT_BASE_PATH=../apps/learn-app/docs

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------

# Server port (for standalone mode)
PORT=3001

# Environment: "development" | "production"
NODE_ENV=development

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------

# Log level: "debug" | "info" | "warn" | "error"
LOG_LEVEL=info
