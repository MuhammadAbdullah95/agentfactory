{
  "name": "study-mode-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/study-mode-api/src",
  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/study-mode-api",
        "command": "uv run pytest tests/ -v --tb=short"
      },
      "cache": true,
      "inputs": ["pythonInputs"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/study-mode-api",
        "command": "uv run ruff check src/ tests/"
      },
      "cache": true,
      "inputs": ["pythonInputs"]
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/study-mode-api",
        "command": "uv run ruff format src/ tests/"
      }
    },
    "format-check": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/study-mode-api",
        "command": "uv run ruff format --check src/ tests/"
      },
      "cache": true,
      "inputs": ["pythonInputs"]
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/study-mode-api",
        "command": "uv run mypy src/"
      },
      "cache": true,
      "inputs": ["pythonInputs"]
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/study-mode-api/src",
        "command": "uv run python -m uvicorn study_mode_api.main:app --host 127.0.0.1 --port 8000 --log-level info"
      }
    },
    "start-clean": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/study-mode-api",
        "commands": [
          "taskkill /F /IM python.exe 2>nul || echo No processes to kill",
          "timeout /t 2 /nobreak >nul",
          "cd src && set PYTHONUNBUFFERED=1 && uv run python -m uvicorn study_mode_api.main:app --host 127.0.0.1 --port 8000 --log-level info"
        ],
        "parallel": false
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/study-mode-api",
        "command": "docker build -t study-mode-api:latest ."
      },
      "cache": true,
      "inputs": ["pythonInputs", "{projectRoot}/Dockerfile"]
    }
  }
}
